<% @prizes.each do |prize| %>
  <%= content_tag(:div, class: "prize-name", id: "prize-#{prize.id}") do -%>
  <%= content_tag(:span, "", 
        class: "glyphicon glyphicon-ok-sign active-glyph") if prize.active %>
    <ul>
      <% prize.prize_elements.each do |prize_element| %>
        <li><%= "#{number_to_currency(prize_element.value)} #{prize_element.name}" %></li>
      <% end %>
    </ul>
    <%= link_to "", [:edit,@category,prize], class: "link-div", id: 'edit' %>
    <%= link_to [@category,prize], 
                id: "delete", 
                class: "close", 
                method: :delete, 
                data: { confirm: 'Are you sure?' } do %>
                  <button type="button" class="close close-button" aria-hidden="true">&times;</button>
                <% end %>
  <% end -%>
<% end %>





<%= form_for([@category,@prize], html: {role: "form"}, class: "form-horizontal")  do |f| %>
<div class="form-wrapper">
  <div class="form-group">
    <%= f.check_box :active, :checked => @prize.active? %>
    <%= f.label :active, "This prize is available" %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-success" %>
  <div>
  </div>
  <% end %>



